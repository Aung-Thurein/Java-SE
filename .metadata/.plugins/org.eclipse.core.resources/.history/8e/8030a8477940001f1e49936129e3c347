	private TableViewModelBase convert(Product[] products) {
		String[] headers =new String[] {"Id", "Name", "Price" };
		columnAlignment [] columns = new columnAlignment[] {columnAlignment.Left, columnAlignment.Left, columnAlignment.Right};
		
		return null;
	}
	
	

}
